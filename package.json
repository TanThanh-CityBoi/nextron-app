{
    "private": false,
    "name": "my-nextron-app",
    "description": "My application description",
    "version": "1.0.0",
    "author": "Yoshihide Shiono <shiono.yoshihide@gmail.com>",
    "main": "app/background.js",
    "scripts": {
        "dev": "nextron",
        "build": "nextron build",
        "build:all": "nextron build --all",
        "build:win32": "nextron build --win --ia32",
        "build:win64": "nextron build --win --x64",
        "build:mac": "nextron build --mac --x64",
        "build:linux": "nextron build --linux",
        "postinstall": "electron-builder install-app-deps && husky install",
        "husky:init": "npx husky-init",
        "lint:staged": "lint-staged",
        "lint": "eslint \"{main,renderer,common}/**/*.{js,jsx,ts,tsx}\" --fix",
        "format": "prettier \"{main,renderer,common}/**/*.{js,jsx,ts,tsx}\" --write",
        "prepare": "husky && husky install"
    },
    "dependencies": {
        "antd": "^5.15.0",
        "axios": "^1.6.7",
        "electron-serve": "^1.3.0",
        "electron-store": "^8.1.0",
        "node-schedule": "^2.1.1",
        "react-icons": "^5.0.1"
    },
    "devDependencies": {
        "@types/node": "^20.11.16",
        "@types/react": "^18.2.52",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "autoprefixer": "^10.4.16",
        "electron": "^28.2.1",
        "electron-builder": "^24.9.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.34.0",
        "husky": "^8.0.0",
        "lint-staged": "^15.2.2",
        "next": "^12.3.4",
        "nextron": "^8.13.0",
        "postcss": "^8.4.30",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.12",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "eslint --fix"
        ]
    },
    "build": {
        "extraResources": [
            ".env"
        ],
        "win": {
            "icon": "resources/app-icon.png"
        }
    },
    "license": "ISC"
}